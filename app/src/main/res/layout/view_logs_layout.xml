<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="2dp"
        android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/logName"
                android:text="@string/logName"
                android:textColor="#00BFA5"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="270dp"
                android:layout_height="21dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <Button
                android:text="VIEW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/viewBtn"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:text="Date"
                android:layout_width="212dp"
                android:layout_height="26dp"
                android:id="@+id/txtDate" android:textColor="#E0F2F1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp" android:layout_marginTop="1dp"
                app:layout_constraintTop_toBottomOf="@+id/logName"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>