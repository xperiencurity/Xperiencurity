<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddDevice" android:layout_gravity="center">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="645dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="48dp"
            android:id="@+id/linearLayout3"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="48dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="48dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center|top">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="@string/devicename"
                android:ems="10"
                android:id="@+id/devicename" android:layout_marginTop="30dp" android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"/>
        <Spinner
                android:layout_width="match_parent"
                android:layout_height="45dp" android:id="@+id/devicetype"
                android:layout_marginTop="10dp" android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="@string/device_brand"
                android:ems="10"
                android:id="@+id/devicebrand" android:layout_marginTop="10dp" android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"/>
        <Button
                android:text="@string/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/savebutton"
                app:layout_constraintTop_toBottomOf="@id/devicebrand" android:layout_margin="30dp"
        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>