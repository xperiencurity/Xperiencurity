<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="2dp"
        android:layout_margin="8dp" android:id="@+id/cardView">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/txtName"
                android:text="@string/devicename"
                android:textColor="#00BFA5"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:id="@+id/txtDesc"
                android:text="@string/devicedescription"
                android:textColor="#E0F2F1"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="323dp"
                android:layout_height="26dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@+id/txtName"
        />
        <TextView
                android:id="@+id/txtType"
                android:text="@string/devicedescription"
                android:textColor="#E0F2F1"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="323dp"
                android:layout_height="26dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@+id/txtDesc"
        />
        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" app:layout_constraintTop_toBottomOf="@id/txtType"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView
                        android:id="@+id/txtOptions"
                        android:text="@string/statistic"
                        android:textColor="#E0F2F1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="8dp"
                />
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView
                        android:id="@+id/txtdatalogging"
                        android:text="@string/device_status"
                        android:textColor="#E0F2F1"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_width="266dp"
                        android:layout_height="26dp"
                        android:layout_marginStart="10dp"
                        tools:layout_constraintBottom_toTopOf="@id/txtLocationtracking"
                />
                <TextView
                        android:id="@+id/txtvalue"
                        android:text="@string/on"
                        android:textColor="#E0F2F1"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_width="266dp"
                        android:layout_height="26dp"
                        android:layout_marginStart="10dp"
                        tools:layout_constraintBottom_toTopOf="@id/txtLocationtracking"
                />
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView
                        android:id="@+id/txtlocation"
                        android:textColor="#E0F2F1"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_width="100dp"
                        android:layout_height="26dp"
                        tools:layout_marginStart="10dp"
                        android:layout_marginStart="10dp"
                        android:text="@string/mode_of_device"/>
                <TextView
                        android:id="@+id/txtvalue13"
                        android:text="@string/armed"
                        android:textColor="#E0F2F1"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_width="266dp"
                        android:layout_height="26dp"
                        android:layout_marginStart="10dp"
                        tools:layout_constraintBottom_toTopOf="@id/txtLocationtracking"
                />
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView
                        android:id="@+id/txtsmokedetector"
                        android:text="@string/smoke_detector"
                        android:textColor="#E0F2F1"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_width="100dp"
                        android:layout_height="26dp"
                        tools:layout_marginStart="10dp"
                        android:layout_marginStart="10dp"
                />
                <TextView
                        android:id="@+id/txtvalue14"
                        android:text="@string/on"
                        android:textColor="#E0F2F1"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_width="266dp"
                        android:layout_height="26dp"
                        android:layout_marginStart="10dp"
                        tools:layout_constraintBottom_toTopOf="@id/txtLocationtracking"
                />
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView
                        android:id="@+id/txtlock"
                        android:text="@string/lock_system"
                        android:textColor="#E0F2F1"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_width="234dp"
                        android:layout_height="26dp"
                        tools:layout_marginStart="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="3dp"
                />
                <TextView
                        android:id="@+id/txtvalue15"
                        android:text="@string/locked"
                        android:textColor="#E0F2F1"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_width="266dp"
                        android:layout_height="26dp"
                        android:layout_marginStart="10dp"
                        tools:layout_constraintBottom_toTopOf="@id/txtLocationtracking"
                />
            </TableRow>
        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>